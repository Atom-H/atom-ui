<template>
    <div>
        <slot></slot> 
        <slot name="content"></slot>
    </div>
</template>
<script>
export default {
    name: 'Popper',

    props: {
        isShow: {

        },

        element: {},
    },

    data() {
        return { top: 0, left: 0 };
    },

    mounted() {
        this.$nextTick(() => {
            // 触发点
            const elContent = this.$slots.default[0].elm;
            const {top, left} = elContent.getBoundingClientRect();
            this.top = top;
            this.left  = left;
syslog(top, left)
            // 在body尾部构造popper
            const elPopper = this.$slots.content[0].elm;
            elPopper.className = 'component-popper';
            elPopper.style.top = `${this.top}px`;
            elPopper.style.left = `${this.left}px`;
            document.body.appendChild(elPopper);

            

        });
    },

    methods: {
        showPopper() {

        }
    }
}
</script>
<style lang="scss" scoped>
@import '../../scss/theme.scss';
.component-popper {
    z-index: $popperZIndex;
    display: inline-block;
    position: absolute;
    padding: 15px;
    border: 1px solid $base;
}
</style>
